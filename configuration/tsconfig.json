{
  "compilerOptions": {
    /* Allow importing JavaScript files in TypeScript project. */
    "allowJs": true,

    /* Disallow unreachable code (code after return, throw, etc.). */
    "allowUnreachableCode": false,

    /* Disable TypeScript features that generate runtime JavaScript code. */
    "erasableSyntaxOnly": true,

    /* Enable compatibility with CommonJS modules when using ES6 imports. */
    "esModuleInterop": true,

    /* Enforce consistent casing in file names when importing. */
    "forceConsistentCasingInFileNames": true,

    /* Transpile each file as a separate module. */
    "isolatedModules": true,

    /* Specify library files to be included in compilation. */
    "lib": ["esnext", "dom", "webworker"],

    /* Specify module system for generated code. */
    "module": "esnext",

    /* Force TypeScript to consider all files as modules. */
    "moduleDetection": "force",

    /* Module resolution strategy optimized for bundlers. */
    "moduleResolution": "bundler",

    /* Disable generation of output files (type checking only). */
    "noEmit": true,

    /* Report errors for fallthrough cases in switch statements. */
    "noFallthroughCasesInSwitch": true,

    /* Require override keyword for overridden methods. */
    "noImplicitOverride": true,

    /* Require explicit return in all branches of functions with return type. */
    "noImplicitReturns": true,

    /* Disallow property access through indexes without explicit declaration. */
    "noPropertyAccessFromIndexSignature": true,

    /* Make index checks stricter (may return undefined). */
    "noUncheckedIndexedAccess": true,

    /* Error on unused local variables. */
    "noUnusedLocals": true,

    /* Error on unused function parameters. */
    "noUnusedParameters": true,

    /* Enable importing .json files. */
    "resolveJsonModule": true,

    /* Skip type checking in library files (.d.ts). */
    "skipLibCheck": true,

    /* Enable all strict TypeScript checks. */
    "strict": true,

    /* Enable strict null and undefined checking. */
    "strictNullChecks": true,

    /* Target ECMAScript version for generated code. */
    "target": "esnext",

    /* Include types for Node.js APIs. */
    "types": ["node"],

    /* Preserve exact import/export syntax without transformations. */
    "verbatimModuleSyntax": true
  }
}
